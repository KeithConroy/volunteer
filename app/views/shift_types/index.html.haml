- content_for :title, 'Shift Types'

%h2.page-header Shift Types

%p= link_to "Create New Shift Type", new_shift_type_path

.panel.panel-default
  .table-responsive
    %table.table.table-striped
      %tbody
        %tr
          %td Organization
          %td Name
          %td Description
          %td Required Role
        - @types.each do |type|
          %tr
            %td= link_to type.organization.name, organization_path(type.organization)
            %td= link_to type.name, shift_type_path(type)
            %td= type.description
            %td
              - if type.role
                = link_to type.role.name, role_path(type.role)
              - else
                N/A
