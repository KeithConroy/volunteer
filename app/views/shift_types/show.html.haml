- content_for :title, @type.name

%h2.page-header= @type.name

%p= link_to "Edit", edit_shift_type_path(@type)

.panel.panel-default
  .table-responsive
    %table.table.table-striped
      %tbody
        %tr
          %td Organization
          %td Name
          %td Description
          %td Required Role
        %tr
          %td= link_to @type.organization.name, organization_path(@type.organization)
          %td= @type.name
          %td= @type.description
          %td
            - if @type.role
              = link_to @type.role.name, role_path(@type.role)
            - else
              N/A
