- content_for :title, @shift.name

%h2.page-header
  = @shift.name
  %small= @shift.formatted_date

%p= link_to "Edit", edit_shift_path(@shift)

%h3 Details

.panel.panel-default
  .table-responsive
    %table.table.table-striped
      %tbody
        %tr
          %th Organization
          %th Type
          %th Date
          %th Time
          %th Available Spots
          %th Required Role
        %tr
          %td= link_to @shift.organization.name, organization_path(@shift.organization)
          %td= link_to @shift.shift_type.name, shift_type_path(@shift.shift_type)
          %td= @shift.formatted_date
          %td= @shift.formatted_time_range
          %td= @shift.formatted_available_spots
          %td
            - if @shift.role
              = link_to @shift.role.name, role_path(@shift.role)
            - else
              N/A

%h3
  = 'Volunteers'
  %small= @shift.formatted_filled_spots

.panel.panel-default
  .table-responsive
    %table.table.table-striped
      %tbody
        %tr
          %th Name
        - @shift.users.each do |user|
          %tr
            %td= link_to user.full_name, user_path(user)
