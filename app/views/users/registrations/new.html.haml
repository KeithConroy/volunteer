:css
  #main {
    width: 50%;
    min-height: auto;
    border-top: 1px solid #d2d2d2;
    border-bottom: 1px solid #d2d2d2;
  }
  #hero {
    top: 0;
    left: 0;
    width: 100%;
    text-shadow: none;
    text-align: left;
    font-size: 14px;
  }

#hero
  #main
    .log-in
      %h2.page-header Sign up
      = bootstrap_form_for resource, as: resource_name, url: registration_path(resource_name) do |f|
        = render "users/shared/error_messages", resource: resource
        = f.text_field :first_name, autofocus: true, autocomplete: "given-name", placeholder: 'First Name', hide_label: true
        = f.text_field :last_name, autocomplete: "family-name", placeholder: 'Last Name', hide_label: true
        = f.email_field :email, autocomplete: "email", placeholder: 'Email', hide_label: true
        = f.password_field :password, autocomplete: "new-password", placeholder: "Password#{" (#{@minimum_password_length} characters minimum)" if @minimum_password_length}", hide_label: true
        = f.password_field :password_confirmation, autocomplete: "new-password", placeholder: 'Confirm Password', hide_label: true
        = f.submit "Sign up", class: 'btn btn-primary log-in-btn'
      = render "users/shared/links"
