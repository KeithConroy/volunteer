:css
  #main {
    width: 50%;
    min-height: auto;
  }

.log-in
  %h2.page-header Log in
  = bootstrap_form_for resource, as: resource_name, url: session_path(resource_name), layout: :horizontal do |f|
    = f.email_field :email, autofocus: true, autocomplete: "email", placeholder: 'Email'
    = f.password_field :password, autocomplete: "current-password", placeholder: 'Password'
    - if devise_mapping.rememberable?
      = f.check_box :remember_me
      = f.submit "Log in", class: 'btn btn-primary log-in-btn'
  = render "users/shared/links"
