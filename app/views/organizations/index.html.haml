- content_for :title, 'Organizations'

%h2.page-header Organizations

.panel.panel-default
  .table-responsive
    %table.table.table-striped
      %tbody
        %tr
          %td Name
          %td Description
          %td Url
        - @organizations.each do |org|
          %tr
            %td= link_to org.name, organization_path(org)
            %td= org.description
            %td= org.url
